<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MobLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MOBFragment">

    <ImageView
        android:id="@+id/MobHaikeiImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/jyounai"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/MobSerihuHaikeiImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/serihuhaikei"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MobSerihuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/MobSerihuHaikeiImageView"
        app:layout_constraintEnd_toEndOf="@+id/MobSerihuHaikeiImageView"
        app:layout_constraintStart_toStartOf="@+id/MobSerihuHaikeiImageView"
        app:layout_constraintTop_toTopOf="@+id/MobHaikeiImageView" />

    <ImageView
        android:id="@+id/MobImageView"
        android:layout_width="337dp"
        android:layout_height="333dp"
        android:src="@drawable/mobu"
        app:layout_constraintBottom_toTopOf="@+id/Next2ImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MobSerihuHaikeiImageView" />

    <ImageButton
        android:id="@+id/Next2ImageButton"
        android:layout_width="271dp"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/hakkou2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Next2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="次へ進む"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/Next2ImageButton"
        app:layout_constraintEnd_toEndOf="@+id/Next2ImageButton"
        app:layout_constraintStart_toStartOf="@+id/Next2ImageButton"
        app:layout_constraintTop_toTopOf="@+id/Next2ImageButton" />
</androidx.constraintlayout.widget.ConstraintLayout>