<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TreasureChestFragment" >

    <ImageView
        android:id="@+id/BgTImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/doukutu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/TreasureChestImageButton"
        android:layout_width="250dp"
        android:layout_height="195dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/tbg_button"
        android:src="@drawable/takarabakoblue"
        app:layout_constraintBottom_toBottomOf="@+id/BgTImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/TguidoImageView"
        android:layout_width="0dp"
        android:layout_height="193dp"
        android:scaleType="centerCrop"
        android:src="@drawable/serihuhaikei"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TguidoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="タップして箱を開けろ"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/TguidoImageView"
        app:layout_constraintEnd_toEndOf="@+id/TguidoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BgTImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>