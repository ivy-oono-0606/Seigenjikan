<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NpcLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NPCFragment">

    <ImageView
        android:id="@+id/BoukenkaImageView"
        android:layout_width="wrap_content"
        android:layout_height="495dp"
        android:src="@drawable/hourousya"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SerihuTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/SerihuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="俺の名前は○○。この先には○○がいる。 もしあいつを倒そうと思っているなら俺がアドバイスしてやるよ。 奴の弱点は○○だ、これまでいろんなやつが挑んだが3回の攻撃じゃ倒れない。 ○○は効くがあまりダメージは見込めないかもな。しかし、弱点攻撃と組み合わせれば効くかもしれないな だが、この攻撃も１回だけじゃだめだ。２回は攻撃しないとな。 それと、○○は効かないから気を付けろよ。 "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/NextImageButton"
        android:layout_width="271dp"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/hakkou2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="次へ進む"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/NextImageButton"
        app:layout_constraintEnd_toEndOf="@+id/NextImageButton"
        app:layout_constraintStart_toStartOf="@+id/NextImageButton"
        app:layout_constraintTop_toTopOf="@+id/NextImageButton" />

</androidx.constraintlayout.widget.ConstraintLayout>